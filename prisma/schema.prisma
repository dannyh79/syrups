// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

generator zod {
  provider              = "zod-prisma"
  output                = "./zod"
  relationModel         = true
  modelCase             = "camelCase"
  modelSuffix           = "Schema"
  useDecimalJs          = true
  prismaJsonNullability = true
}

datasource db {
  provider = "sqlite"
  url      = "file:./dev.db"
}

model User {
  id             String    @id
  email          String    @unique
  hashedPassword String
  name           String?
  sessions       Session[]
}

model Session {
  id        String   @id
  userId    String
  expiresAt DateTime
  user      User     @relation(references: [id], fields: [userId], onDelete: Cascade)
}

model Employee {
  id        String  @id @default(cuid())
  lastName  String?
  firstName String
  email     String  @unique
  role      String?

  createdAt          DateTime            @default(now())
  updatedAt          DateTime            @updatedAt
  performanceReviews PerformanceReview[] @relation("EmployeeToPerformanceReview")
  assignedReviews    PerformanceReview[] @relation("AssigneeToPerformanceReview")
}

model PerformanceReview {
  id          String   @id @default(cuid())
  employee    Employee @relation("EmployeeToPerformanceReview", fields: [employeeId], references: [id])
  employeeId  String
  assignee    Employee @relation("AssigneeToPerformanceReview", fields: [assigneeId], references: [id])
  assigneeId  String
  submittedAt DateTime
  feedback    String
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  @@index([employeeId])
  @@index([assigneeId])
}
